<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Home Page</title>
        <link rel="stylesheet" href="/styles/card.css">

</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-3 card-container">
            <% blogs.forEach(blog=> { %>
                <div class="card">
                    <div class="card-img-container">
                        <img src="<%= blog.coverImage %>" alt="Cover Image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blog.title %>
                        </h5>
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
                <% }); %>
        </div>


        <%- include('./partials/script') %>

</body>

</html>