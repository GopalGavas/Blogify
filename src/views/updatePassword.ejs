<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %> <!-- Including common head elements -->
        <title>Update Password</title>
        <style>
            .container {
                max-width: 600px;
                margin: auto;
                padding: 20px;
                border: 1px solid #eaeaea;
                border-radius: 8px;
                background-color: #f9f9f9;
            }

            h2 {
                text-align: center;
            }

            .form-group {
                margin-bottom: 20px;
            }

            .form-group label {
                display: block;
                margin-bottom: 10px;
            }

            .form-control {
                width: 100%;
                padding: 10px;
                font-size: 1rem;
            }

            .btn {
                width: 100%;
                padding: 10px;
                font-size: 1rem;
            }

            .alert {
                margin-bottom: 20px;
            }

            .success {
                color: green;
                text-align: center;
                margin-top: 20px;
            }

            .error {
                color: red;
                text-align: center;
                margin-top: 20px;
            }
        </style>
</head>

<body>
    <%- include('./partials/nav') %> <!-- Including navigation -->

        <div class="container mt-5">
            <h2>Update Your Password</h2>

            <!-- Displaying error message if any -->
            <% if (locals.error && locals.error.length> 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= locals.error %> <!-- Display error message -->
                </div>
                <% } %>

                    <!-- Displaying success message if any -->
                    <% if (locals.success) { %>
                        <div class="success">
                            <%= locals.success %> <!-- Display success message -->
                        </div>
                        <% } %>

                            <!-- Form for updating password -->
                            <form action="/user/update-password" method="post" class="update-password-form">
                                <div class="form-group">
                                    <label for="currentPassword">Current Password</label>
                                    <input type="password" name="currentPassword" id="currentPassword"
                                        class="form-control" required>
                                </div>

                                <div class="form-group">
                                    <label for="newPassword">New Password</label>
                                    <input type="password" name="newPassword" id="newPassword" class="form-control"
                                        required>
                                </div>

                                <div class="form-group">
                                    <label for="confirmPassword">Confirm New Password</label>
                                    <input type="password" name="confirmPassword" id="confirmPassword"
                                        class="form-control" required>
                                </div>

                                <button type="submit" class="btn btn-primary mt-4">Update Password</button>
                            </form>
        </div>

        <%- include('./partials/script') %> <!-- Including common scripts -->
</body>

</html>